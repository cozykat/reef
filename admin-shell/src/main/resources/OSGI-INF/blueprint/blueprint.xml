<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="reef/resetdb">
            <action class="org.totalgrid.reef.shell.admin.ResetDatabaseCommand"/>
        </command>
        <command name="reef/load">
            <action class="org.totalgrid.reef.shell.admin.LoadConfigCommand"/>
        </command>
        <command name="metrics/dump">
            <action class="org.totalgrid.reef.shell.admin.DumpMetricsToCSV"/>
        </command>
        <command name="metrics/reset">
            <action class="org.totalgrid.reef.shell.admin.ResetMetrics"/>
        </command>
        <command name="metrics/rates">
            <action class="org.totalgrid.reef.shell.admin.CalcMetricsRates"/>
        </command>
    </command-bundle>

</blueprint>