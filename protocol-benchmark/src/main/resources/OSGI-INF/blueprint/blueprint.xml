<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

   <bean id="benchmark-protocol" class="org.totalgrid.reef.protocol.benchmark.BenchmarkProtocol" />
   <service id="protocol-benchmark"  ref="benchmark-protocol" interface="org.totalgrid.reef.protocol.api.IProtocol"/>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
      <command name="sim/list">
          <action class="org.totalgrid.reef.protocol.benchmark.SimulatorList">
            <argument ref="benchmark-protocol" />
          </action>
      </command>
      <command name="sim/config">
          <action class="org.totalgrid.reef.protocol.benchmark.SimulatorConfig">
            <argument ref="benchmark-protocol" />
          </action>
      </command>
  </command-bundle>

</blueprint>