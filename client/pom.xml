<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>reef-client</artifactId>
    <packaging>bundle</packaging>
    <parent>
        <groupId>org.totalgrid.reef</groupId>
        <artifactId>reef-scala-base</artifactId>
        <version>0.4.0-RC5-SNAPSHOT</version>
        <relativePath>../scala-base</relativePath>
    </parent>

    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>

    <build>
        <plugins>
			<plugin>
				<executions>
					<execution>
						<inherited>false</inherited>
						<id>magic</id>
						<phase>
							generate-sources
						</phase>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<configuration>
							<doclet>org.totalgrid.reef.apienhancer.ApiEnhancer</doclet>
							<docletArtifact>
								<groupId>org.totalgrid.reef</groupId>
								<artifactId>reef-api-enhancer</artifactId>
								<version>${reef.version}</version>
							</docletArtifact>
							<reportOutputDirectory>.</reportOutputDirectory>
							<destDir>target/generated-sources</destDir>
							<useStandardDocletOptions>false</useStandardDocletOptions>
						</configuration>
					</execution>
				</executions>
				<inherited>false</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/generated-sources/scala</source>
								<source>${project.build.directory}/generated-sources/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
            <plugin>
                <groupId>com.google.protobuf.tools</groupId>
                <artifactId>maven-protoc-plugin</artifactId>
                <version>0.1.9-GEC</version>
                <configuration>
                    <protoSourceRoot>src/proto</protoSourceRoot>
					<outputDirectory>${project.build.directory}/generated-sources/java</outputDirectory>
                    <!--<checkStaleness>true</checkStaleness>-->
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${mavenBundleVersion}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Name>Reef Protocol Buffers Library</Bundle-Name>
                        <Export-Package>
                            org.totalgrid.reef.proto,
                            org.totalgrid.reef.client.service.*,
                            org.totalgrid.reef.client.factory,
                            org.totalgrid.reef.client.sapi,
                            org.totalgrid.reef.client.sapi.rpc.*,
                            org.totalgrid.reef.proto
                        </Export-Package>
                        <_nouses>true</_nouses>
                    </instructions>
                </configuration>
            </plugin>
			<plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <configuration>
                    <header>../APACHE_FILE_HEADER</header>
                </configuration>
            </plugin>
        </plugins>
    </build>



    <dependencies>
		<dependency>
            <groupId>org.totalgrid.reef</groupId>
            <artifactId>reef-client-api</artifactId>
            <version>${reef.version}</version>
			<scope>compile</scope>
        </dependency>

		<dependency>
            <groupId>org.totalgrid.reef</groupId>
            <artifactId>reef-test-util</artifactId>
            <version>${reef.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>


